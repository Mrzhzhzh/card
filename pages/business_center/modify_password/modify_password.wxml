<!--pages/business_center/modify_password/modify_password.wxml-->

<view class='password_box'>
  <view class='password_txt'><image class='password_img' src='/images/.png'></image><input type='password' placeholder='输入原始密码'  data-key="o_password" bindblur="changeBind"></input></view>
  <view class='password_txt'><image class='password_img' src='/images/.png'></image><input type='password' placeholder='输入您的新密码' data-key="n_password" bindblur="changeBind"></input></view>
  <view class='password_txt'><image class='password_img' src='/images/.png'></image><input type='password' placeholder='再次确认密码'  data-key="c_password" bindblur="changeBind"></input></view>
</view>
<button type='submit' class='submit' bindtap="submit">确认修改</button>
