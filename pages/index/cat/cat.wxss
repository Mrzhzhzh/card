/* pages/index/cat/cat.wxss */
.business_top_box{
  display: flex;
  align-items: center;
  border-bottom: 10rpx #f2f2f2 solid;
  padding: 30rpx;
}
.business_img{
  width: 268rpx;
  height: 192rpx;
}
.business_text{
  margin-left: 30rpx;
}
.business_text_name{
  font-size: 40rpx;
  color: #101010;
  line-height: 2;
  padding: 20rpx 0;
}
.business_text_class{
  font-size: 28rpx;
  color: #FF9800;
}
.business_link{
  line-height: 1.5;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx #f2f2f2 solid;
}
.business_link_img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.business_link_text{
  font-size: 28rpx;
  color: #101010;
}
.main_box{
  border-top: 10rpx #f2f2f2 solid;
  padding: 0 30rpx;
  margin: 10rpx auto;
}
.main_bus_title{
  font-size: 36rpx;
  color: #101010;
  font-weight: bold;
  text-align: center;
  margin: 30rpx auto;
}
.main_bus_img{
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.main_bus_txt{
  font-size: 28rpx;
  color: #808080;
  line-height: 1.5;
  margin-bottom: 30rpx;
  display: block;
}
