/* pages/user_center/revise_phone/revise_phone.wxss */
.revise_main{
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx #ebebeb solid;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 20rpx 30rpx;
}
.revise_icon{
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #808080;
  padding-right: 30rpx;
  border-right: 2rpx #e2e2e2 solid;
}
.revise_icon image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex: 1;
}
.revise_input{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #101010;
  margin-left: 10rpx;
}
.revise_input1{
  flex: 2;
  width: 260rpx;
}
.revise_input2{
  flex: 1;
  width: 150rpx;
}
.get_code{
  width: 200rpx;
  color: #FF9800;
  border: 2rpx #FF9800 solid;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  text-align: center;
  padding: 0 10rpx;
  font-size: 28rpx;
}
.submit{
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #FA9D26;
  border-radius: 6rpx;
  margin: 300rpx auto 0;
  display: block;
}
